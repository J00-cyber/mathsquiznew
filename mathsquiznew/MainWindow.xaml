<Window x:Class="mathsquiznew.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Math Quiz" Height="300" Width="400">
    <Window.Background>
        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
            <GradientStop Offset="0" Color="#FFE8E8E8"/>
            <GradientStop Offset="1" Color="#FF6B6B6B"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:Name="QuestionText" FontSize="20" Margin="0,0,0,10" TextAlignment="Center" Foreground="White"/>
            <TextBox x:Name="AnswerInput" Width="120" Height="30" Margin="0,0,0,10" FontSize="16" />
            <Button Content="Submit" Width="80" Height="30" FontSize="16" Click="Submit_Click"/>
            <TextBlock Name="ScoreText"  FontSize="18" Foreground="#FFD4D4D4" Margin="0,10,0,0" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
